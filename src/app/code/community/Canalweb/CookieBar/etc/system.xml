<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <cwtab translate="label">
            <label>Canal Web</label>
            <sort_order>14</sort_order>
        </cwtab>
    </tabs>
    <sections>
        <cw_cookiebar>
          <label>Cookie Bar</label>
          <tab>cwtab</tab>
          <frontend_type>text</frontend_type>
          <sort_order>20</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <groups>
              <cookieconfig translate="label">
                  <label>Configuration</label>
                  <frontend_type>text</frontend_type>
                  <sort_order>1</sort_order>
                  <show_in_default>1</show_in_default>
                  <show_in_website>1</show_in_website>
                  <show_in_store>1</show_in_store>
                  <fields>
                      <activation translate="label">
                          <label>Activer</label>
                          <comment>Permet d'activer ou non la barre de cookies</comment>
                          <frontend_type>select</frontend_type>
                          <source_model>adminhtml/system_config_source_yesno</source_model>
                          <sort_order>5</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>1</show_in_store>
                      </activation>
                      <position translate="label">
                          <label>Position de la barre</label>
                          <comment></comment>
                          <frontend_type>select</frontend_type>
                          <source_model>cookiebar/system_config_source_dropdown_values</source_model>
                          <sort_order>10</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>1</show_in_store>
                          <depends>
                              <activation>1</activation>
                          </depends>
                      </position>
                      <texte_barre translate="label">
                          <label>Texte de la barre</label>
                          <comment>Texte de la barre</comment>
                          <frontend_type>textarea</frontend_type>
                          <sort_order>15</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>1</show_in_store>
                          <depends>
                              <activation>1</activation>
                          </depends>
                      </texte_barre>
                      <texte_btn translate="label">
                          <label>Texte bouton</label>
                          <comment>Texte bouton</comment>
                          <frontend_type>textarea</frontend_type>
                          <sort_order>20</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>1</show_in_store>
                          <depends>
                              <activation>1</activation>
                          </depends>
                      </texte_btn>
                  </fields>
              </cookieconfig>
          </groups>
      </cw_cookiebar>
    </sections>
</config>
